{
  "name": "aion2-power-guide",
  "version": "1.0.0",
  "description": "아이온2 전투력 향상 AI 가이드",
  "scripts": {
    "dev": "npm run build:css && python -m http.server 8000",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/output.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ./public/output.css --watch",
    "build": "npm run build:css && npm run build:html",
    "build:html": "cp aion2-power-guide.html public/index.html"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33"
  }
}
